<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReadFilePractice.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Enter the word pattern" />
            <Entry Placeholder="*****" x:Name="wordPatter"/>
            <Button Text="Search for word"/>
            <ListView x:Name="solutions">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="x:String"></DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
