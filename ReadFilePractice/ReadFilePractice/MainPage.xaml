<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReadFilePractice.MainPage"
             xmlns:lists="clr-namespace:ReadFilePractice.ViewModels">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Enter the word pattern" />
            <Entry Placeholder="*****" x:Name="wordPatter"/>
            <Button Text="Search for word" Clicked="FillList"/>

            <CollectionView x:Name="solutions">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding AWord}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
